# Production Environment Variables
# Copy this file to .env.local and fill in the actual values

# Database
DATABASE_URL="postgresql://username:password@host:5432/farcaster_tipping_bot"

# Base Network
NEXT_PUBLIC_BASE_RPC_URL="https://mainnet.base.org"
NEXT_PUBLIC_BASE_CHAIN_ID="8453"

# Platform Configuration
PLATFORM_WALLET_ADDRESS="0x..." # Your platform wallet address for fee collection
PLATFORM_FEE_PERCENTAGE="1" # 1% fee

# Redis (for caching and rate limiting)
REDIS_URL="redis://host:6379"

# Farcaster
FARCASTER_HUB_URL="https://hub.farcaster.xyz"
NEXT_PUBLIC_FARCASTER_DEVELOPER_FID="your_fid_here"

# Security
NEXTAUTH_SECRET="your-production-secret-key-here"
NEXTAUTH_URL="https://your-domain.com"

# Monitoring (Optional)
SENTRY_DSN="https://your-sentry-dsn"
DATADOG_API_KEY="your-datadog-api-key"

# Node Environment
NODE_ENV="production"